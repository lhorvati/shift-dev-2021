/* HOWTO.STYL ======================================= */

#howto
    padding: 50px 0 100px 0
    overflow hidden

    .container
        position relative

    .howto
        position relative
        z-index: 2

        h2
            color: yellow

        p
            font-family: font2
            font-size: 16px
            color: white

        .howto__buttons
            margin-top: 50px
            flexbox()
            align-items: center

    .howtoBtn
        width: 180px
        height 60px
        flexbox()
        flex-flow: row nowrap
        align-items: center
        justify-content: space-between
        background: color0
        cursor pointer
        transition(.5s)
        margin-right: 80px
        box-sizing()

        &:last-child
            margin-right: 0

        &:hover
            opacity 1

            &.howtoBtn--tiel
                .howtoBtn__icon svg path,
                .howtoBtn__logo svg path
                    fill: tiel
            &.howtoBtn--red
                .howtoBtn__icon svg path,
                .howtoBtn__logo svg path
                    fill: red
            &.howtoBtn--green
                .howtoBtn__icon svg path,
                .howtoBtn__logo svg path
                    fill: green
            &.howtoBtn--blue
                .howtoBtn__icon svg path,
                .howtoBtn__logo svg path
                    fill: blue

        .howtoBtn__icon,
        .howtoBtn__logo
            flexbox()
            flex-center()

            svg path
                fill: white
                transition(.5s)

        .howtoBtn__icon
            width: 38px
            height 38px

        .howtoBtn__logo
            width: 120px
            height auto

            svg
                max-height 30px



    .howtoBg
        position absolute
        bottom: -60px
        right: 0
        width: 930px
        height 40px
        background: url(../img/backgrounds/howto-bg.svg) center no-repeat
        background-size: 930px 40px
        z-index 1
/* DOWNLOAD.STYL ======================================= */

#download
    margin: 50px 0
    box-sizing()
    padding: 60px 0

    .container
        flexbox()
        justify-content: space-between
        align-items: center

        &:after
            content: ''
            display block
            width: 100%
            height 100%
            background: url(../img/backgrounds/download-bg.svg) center no-repeat
            background-size: contain
            position absolute
            top: 0
            left: 0
            z-index -1

    .download__video,
    .heroBox
        width: 45%

        .heroBox__date--line
            background: red

        .heroBox__date--text
            font-weight: 400

        .heroBox__heading
            color: white
            font-size: 60px
            font-weight: 400
            line-height: normal

            strong
                color: green
                font-size: 60px

            span
                margin-top 0

    .download__video
        overflow: hidden
        background: #fff
        height: 370px
        position: relative
        cursor: pointer

        &:hover .download__video-btn
            opacity: 1

        .download__video-btn
            position: absolute
            top: 50%
            left: 50%
            margin: -27px 0 0 -27px
            width: 55px
            height: 55px
            background: url(../img/icons/play_button.svg) center no-repeat
            background-size: 55px
            opacity: .8
            transition(.2s)


    .download__row
        margin-top: 60px
        font-size: 16px
        font-weight: 600
        color: white

        .download__buttons
            margin-top: 20px

            a
                &:last-child
                    margin-left: 40px

                &:hover svg path
                    fill green

                svg
                    width: 40px

                    path
                        fill: white
                        transition(.3s)

/* CRYPTO-PAYMENT.STYL ======================================= */


#crypto-payment, #invoice-payment
    display: none
    overflow-y: auto


body.crypto-payment #crypto-payment,
body.invoice-payment #invoice-payment
    display: block


body.crypto-payment .navBar,
body.crypto-payment #hero,
body.crypto-payment #about,
body.crypto-payment #numbers,
body.crypto-payment #who,
body.crypto-payment #speakers,
body.crypto-payment #schedule,
body.crypto-payment #tickets,
body.crypto-payment #download,
body.crypto-payment #previous,
body.crypto-payment #testimonials,
body.crypto-payment #location,
body.crypto-payment #howto,
body.crypto-payment #newsletter,
body.crypto-payment #sponsors,
body.crypto-payment #sponsors2,
body.crypto-payment #cfp,
body.crypto-payment #prices,
body.crypto-payment #footer,
body.invoice-payment .navBar,
body.invoice-payment #hero,
body.invoice-payment #about,
body.invoice-payment #numbers,
body.invoice-payment #who,
body.invoice-payment #speakers,
body.invoice-payment #schedule,
body.invoice-payment #tickets,
body.invoice-payment #download,
body.invoice-payment #previous,
body.invoice-payment #testimonials,
body.invoice-payment #location,
body.invoice-payment #howto,
body.invoice-payment #newsletter,
body.invoice-payment #sponsors,
body.invoice-payment #sponsors2,
body.invoice-payment #cfp,
body.invoice-payment #prices,
body.invoice-payment #footer
    display: none


#crypto-payment,
#invoice-payment
    position: fixed
    background: darkBlue url(../img/backgrounds/crypto-bg.svg) center no-repeat
    background-size: cover
    width: 100%
    height: 100%

    & *
        box-sizing: border-box

    .crypto__title
        font-size: 42px
        text-align: center
        margin-top: 40px
        color: white
        font-weight: 600
        margin-bottom: 40px

    #crypto-summary,
    #invoice-summary
        max-width: 400px
        margin: 10px auto 40px auto

    .crypto__summary
        font-size: 18px
        color: white
        line-height: 2
        margin-bottom: 5px

    .crypto__total
        border-top: 1px solid white
        padding-top: 10px

    .crypto__total:after
        content:" "
        display:table
        clear:both

    .crypto__prefix
        float: left
        font-size: 18px
        color: white

    .crypto__value
        float: right
        font-size: 18px
        color: white

    form
        box-sizing: border-box
        max-width: 400px
        margin: 20px auto

    input
        display: block
        width: 100%
        border:none
        background-image:none
        background-color:transparent
        -webkit-box-shadow: none
        -moz-box-shadow: none
        box-shadow: none
        margin-bottom: 5px
        border-bottom: 1px solid white
        color: white
        font-size: 22px
        padding: 8px 6px
        margin-bottom: 25px

    input::placeholder
        color: rgba(255, 255, 255, 0.5)

    .summary__title,
    .form__title
        padding-left: 5px
        letter-spacing: 0.5px
        font-size: 14px
        font-weight: 800
        text-transform: uppercase
        color: white
        max-width: 400px
        margin: 0 auto

    .currencies__title
        display: none
        padding-left: 5px
        letter-spacing: 0.5px
        font-size: 14px
        font-weight: 800
        text-transform: uppercase
        color: white
        margin-bottom: 20px
        max-width: 540px
        margin-left: auto
        margin-right: auto

    #invoice-container
        display: none
        background-color: white
        width: 100%
        max-width: 500px
        margin: 0 auto
        margin-bottom: 30px
        margin-top: 40px
        box-shadow: 0px 5px 23px 0px rgba(0,0,0,0.07)
        border-radius: 3px

    #invoice-download
        display: none
        max-width: 200px
        margin: 0 auto
        line-height: 34px

    #crypto-currencies
        display: none
        width: 540px
        margin: 0 auto

    #crypto-currencies:after
        content:" "
        display:table
        clear:both

    .currencies
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)

    .currency
        cursor: pointer
        float: left
        width: 120px
        height: 120px
        background-color: white
        border-radius: 4px
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)	
        position: relative
        text-align: center
        margin: 10px
        transition(.3s)

    .currency:hover
        transition(.3s)
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
        transform: translateY(-1px)

    .currency:last-child
        margin-right: 0

    .price
        position: absolute
        font-weight: 800
        bottom: 15px
        margin-left: auto
        margin-right: auto
        left: 0
        right: 0

    .currency img
        width: 54px
        height: 54px	
        margin-top: 20px

    .crypto-checkout
        display: none
        background-color: white
        border-radius: 20px
        width: 100%
        max-width: 600px
        position: absolute
        left: 50%
        top: 50%
        transform: translate(-50%, -50%)
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
        word-break: break-word

    .crypto-checkout .btn.green.fill:hover
        background: red
        border-color: red

    .crypto-icon
        display: block
        margin: 0 auto 20px auto
        width: 100px
        height: 100px

    .crypto-amount
        text-align: center
        font-size: 28px
        font-weight: 600
        padding: 0 25px

    .crypto-fiat
        text-align: center
        font-size: 20px
        margin-top: 10px
        padding: 0 25px

    .crypto-info
        font-size: 18px
        margin-top: 30px
        text-align: center
        margin-bottom: 10px
        padding: 0 25px

    #crypto-wallet
        font-size: 20px
        font-weight: 600
        padding: 0 25px 25px 25px
        text-align: center


    .crypto-header
        background-color: #ebebeb
        padding: 20px
        margin-bottom: 35px
        border-top-left-radius: 8px
        border-top-right-radius: 8px
        text-align: center
        font-weight: 500
        font-size: 20px

    .crypto-result
        text-align: center
        max-width: 500px
        padding: 0 25px
        margin: 0 auto 35px auto
        line-height: 1.5

    .crypto-image
        width: 25px
        height: 25px

    .crypto-qr
        display: block
        width: 100px
        height: 100px
        margin: 5px auto 25px auto

.lds-ring {
  display: none
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  width: 64px
  height: 64px
}
.lds-ring div {
  box-sizing: border-box
  display: block
  position: absolute
  width: 51px
  height: 51px
  margin: 6px
  border: 6px solid #fff
  border-radius: 50%
  animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite
  border-color: #fff transparent transparent transparent
}
.lds-ring div:nth-child(1) {
  animation-delay: -0.45s
}
.lds-ring div:nth-child(2) {
  animation-delay: -0.3s
}
.lds-ring div:nth-child(3) {
  animation-delay: -0.15s
}

#back-to-home {
    display: none
    margin-top: 10px
}

.invoice-title {
    display: none
    font-size: 42px;
    text-align: center;
    margin-top: 40px;
    color: #fff;
    font-weight: 600;
}

.invoice-description {
    display: none
    color: white;
    font-size: 16px;
    text-align: center;
}

@keyframes lds-ring {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}


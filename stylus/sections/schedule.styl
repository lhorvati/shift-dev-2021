.c-schedule
    padding 150px 0 100px 0



  .intro
    line-height: 1.5
    color: white
    width: 100%


  .agenda-wrap 
    display:flex
    flex-direction: column
    margin-top:50px

    .nav-wrap
      width:100%
      display: flex
      flex-direction: row
      justify-content: space-between

      .day-nav
        display:flex
        flex-direction:column

        .day-wrap
          width:100%
          color: white
          font-size: 30px
          
          .btn-day
            color: white
            font-weight: 600

            &.active
              color: green

        
        .date 
          margin-top:15px
          font-size: 20px
          width:100%
          color: white

      .stage-nav

        .btn-stage
          padding: 5px 0px
          margin:0 15px
          &.active
            border-bottom: 1px solid green
            color: green

    .agenda-content-window
        overflow hidden

    .agenda-content-wrap
        width 200%
        flexbox()
        align-items: flex-start
        transition(.3s)
        
    #day1.agenda
      background-image:url('../img/day1-m.svg')
      background-position:top center
      background-repeat: no-repeat
      background-size: contain


    #day2.agenda
      background-image:url('../img/day2-m.svg')
      background-position:top center
      background-repeat: no-repeat
      background-size: contain
      

    .agenda
      margin-top:22px
      padding-top:100px
      width:100%
      display:flex
      flex-direction:column
      align-items:flex-end
      min-height:500px

    .agendaWrap
        width: calc(100% - 175px)
        display: none

    .agenda__item
        flexbox()
        align-items: flex-start
        border-bottom: .7px solid gray3
        cursor: pointer
        width: 100%
        padding: 40px 0

        &:last-child
          border-bottom:0


        .hour-wrap
            width: 240px
            margin-bottom: 0


          .hour
            font-size: 37px
            font-weight: 600
            color: green


        .details-wrap
          width: 100%
          display:flex
          flex-direction:column
          align-items: stretch
          
          & > div:last-child
            margin-bottom:0 !important

          .duration
            font-size: 17px
            color: gray3
            margin-bottom: 25px
            
          .title 
            font-size: 37px
            color:white
            margin-bottom:15px

            
          .name 
            font-size: 17px
            color: green
            margin-bottom:25px
            line-height: 1.5

          .lead 
            font-size: 17px
            color: gray3
            line-height: 1.5
            display: none

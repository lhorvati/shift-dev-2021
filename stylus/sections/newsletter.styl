/* NEWSLETTER.STYL ======================================= */

#newsletter,
#cfp
    padding: 100px 0
    overflow hidden

    .container
        text-align: center


.newsletter__text
    line-height: 1.7
    max-width: 550px
    margin: 0 auto

.newsletterBox
    flexbox()
    flex-center()
    flex-flow: column nowrap

    .newsletterBox__text
        text-align: center
        font-size: 40px
        font-weight: 700
        margin: 0 0 40px 0
        color: blue

    .newsletterBox__icon,
    .newsletterBox__icon svg
        width: 105px
        height 105px



.newsletter
    flexbox()
    flex-center()
    margin-top: 55px

    .newsletter__item
        margin: 0 5px

    form
        position relative
        width: 100%
        max-width 500px

        input[type="text"],
        input[type="email"],
        input[type="submit"]
            height: 50px
            border-radius(4px)
            border: none

        input.input[type="text"],
        input.input[type="email"]
            width: 100%
            background: white
            box-sizing()
            padding: 0 15px 0 15px
            font-size: 14px
            font-weight: 400

            &:focus ~ .inputLabel,
            &:valid ~ .inputLabel
                display: none



        input[type="submit"]
            // position absolute
            // top: 0
            // right 0
            // bottom: 0
            margin: 0 5px
            width: 50px
            background: green url(../img/icons/icon-arrowRight.svg) center no-repeat
            background-size: 10px
            cursor pointer
            transition(.5s)

            &:hover
                background-color: yellow

        .inputLabel
            font-size: 14px
            font-weight: 400
            position absolute
            top: 50%
            margin-top: -7px
            left 15px
            pointer-events: none


.submission
    width: 100%
    height 250px
    border: 1px solid green
    border-radius(5px)
    padding: 32px 0 32px 40px
    box-sizing()
    text-align: left
    flexbox()
    justify-content: space-between
    flex-flow: row wrap
    position relative

    &.submission--center
        flex-flow: column nowrap
        padding: 50px
        height auto
        align-items: center

        p
            font-family: font2
            font-size: 15px
            color: white

    &:after
        content: ''
        display block
        width: 100%
        height 100%
        background: url(../img/backgrounds/newsletter-bg.svg) center no-repeat
        background-size: contain
        position absolute
        bottom: -100px
        left: -50px
        z-index -1

    .submission__col
        flex: 1 1 auto
        text-align: center

        &:first-child
            max-width: 780px

        &:last-child
            flexbox()
            flex-center()

    .submission__btn
        margin-top 30px


    h2
        color: green
        font-size: 82px
        margin-top: 0
        text-align: center

    p
        font-size: 12px
        line-height: 1.5
        font-family: font2


#newsletter
    #mc_embed_signup
        form
            width: 100%

    #mc_embed_signup_scroll
        flexbox()
        align-items: center
        justify-content: flex-end


@media only screen and (max-width: 981px), only screen and (max-device-width: 981px) {

    #newsletter #mc_embed_signup_scroll {
        flex-flow: column wrap
    }
    #newsletter .newsletter .newsletter__item,
    #newsletter .newsletter form input[type="submit"] {
        width: 100%
        margin: 5px 0
    }


}
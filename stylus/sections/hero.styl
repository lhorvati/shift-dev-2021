/* HERO.STYL ======================================= */

#hero
    height: 100vh
    flexbox()
    flex-center()
    position: relative
    z-index: 1
    color: white

    .container
        //background: url(../img/backgrounds/hero-bg.svg) center bottom 40% no-repeat
        background-size: contain
        height: 100%
        display: flex
        align-items: center
        position relative

.hero__bg
    position: absolute
    width: 100%
    height 100%
    top: 0
    bottom: 0
    left: 0
    right: 0
    flexbox()
    flex-center()
    z-index: 0

    &.hero__bg-svg
        opacity: 0
        transition(.5s)

    .test
        stroke-dasharray: 1000
        stroke-dashoffset: 1000
        animation: dash 5s linear forwards

    @keyframes dash {
        to {
            stroke-dashoffset: 0
        }
    }



.heroBox
    flexbox()
    flex-flow: column nowrap
    align-items: flex-start
    position relative
    z-index: 1
    opacity 0
    transition(.5s)
    transform: translateY(-30px)


    .heroBox__date
        flexbox()
        align-items: center
        position relative

        .heroBox__date--text
            font-family: font2
            font-size: 12px
            font-weight: 600
            color: white

        .heroBox__date--line
            width: 40px
            height: 1px
            margin: 0 10px
            background: blue

    .heroBox__heading
        font-size: 50px
        font-weight: 400
        margin: 30px 0 15px 0
        line-height: 1.1

        strong
            // font-size: 50px
            font-size: 44px
            font-weight: 600
            color: green

        span
            display: block
            margin-top 20px
            font-weight: 300

    .heroBox__heading--line
        width: 76px
        height 5px
        background: white
        margin-left: 30px

    .heroBox__text
        font-family: font2
        font-size: 14px
        font-weight: 400
        color: white
        line-height: 1.5
        margin-bottom: 20px
        // max-width 500px
        max-width 600px

    .heroBox__buttons
        flexbox()
        align-items: center

        .heroBox__buttons-spacer
            // margin: 0 10px 0 24px
            margin: 0 20px

    .heroBox__tagline
        flexbox()
        align-items: center
        font-size: 20px
        font-weight: 300
        margin: 5px 0

        a
            flexbox()
            align-items: center
            margin-left: 20px
            cursor pointer

            svg
                width: 80px

                path
                    transition(.5s)

                .ictLogo4
                    fill: darkBlue
                .ictLogo1,
                .ictLogo2,
                .ictLogo3
                    fill: white

            &:hover
                .ictLogo1
                    fill: #00739C
                .ictLogo2
                    fill: #C7A34F
                .ictLogo3
                    fill: #00739C
                .ictLogo4
                    fill: #C7A34F

.heroPopup-wrap
    position relative
.heroPopup
    width: 100%
    display: none
    position: absolute
    top: 36px
    left -20px
    background-color: darkBlue
    padding: 30px 20px 20px 20px
    border-radius: 20px

.heroPopup__text
    margin-bottom 10px
    text-align: center
    line-height: 1.3

    a
        color: green

        &:hover
            color yellow

.heroPopup__buttons
    .btn
        margin-bottom 10px
        width: 100%

        &:last-child
            margin-bottom 0
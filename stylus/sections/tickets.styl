/* TICKETS.STYL ======================================= */

#tickets
    padding: 100px 0
    overflow hidden

    h2
        margin-top: 0

    .title-desc
        font-family: font2
        color: white

.tickets
    margin-top: 50px
    flexbox()
    flex-center()
    flex-flow: column nowrap


.ticketsBot
    flexbox()
    align-items: center
    justify-content: space-between

    .tickets__cardWrap,
    .tickets__cards,
    .tickets__buttons
        flexbox()

    .tickets__cardWrap
        flex-flow: column nowrap
        max-width: 600px
        flex: 1 1 auto

    .tickets__cards
        box-sizing()
        padding: 0 20px
        justify-content: space-between
        align-items: center
        height 36px

        img
            max-width 50px
            max-height 30px


    .tickets__buttons
        min-width: 205px
        flex-flow: row-reverse nowrap

        .btn
            font-size: 15px
            font-weight: 500
            padding: 11px 16px

            &:not(:last-child)
                margin-left: 20px

        .btn.yellow
            &:hover svg path
                fill: white

            svg
                width: 20px
                height: 20px
                margin-right: 10px

                path
                    transition(.5s)
                    fill: yellow


.ticket
    position relative
    width: 100%
    flexbox()
    align-items: center
    justify-content: flex-start
    border-radius(3px)
    box-sizing()
    padding: 40px 50px 40px 35px
    margin-bottom: 20px
    transition(.5s)

    &:after
        content: ''
        position absolute
        right: -20px
        top: 50%
        transform: translate3d(0, -50%, 0)
        width: 40px
        height 40px
        border-radius(100%)
        background: darkBlue

    &:nth-child(odd)
        background-color: green
        &:hover
            // background-color: darkBlue1
            opacity .85
        .select select:hover
            //border-color: red
    &:nth-child(even)
        background-color: blue
        &:hover
            // background-color: darkBlue1
            opacity .85
        .select select:hover
            //border-color: red

    .ticket__icon
        width: 40px
        height 40px
        flex-shrink: 0
        margin-right: 50px

    .ticket__mid
        flexbox()
        align-items: center
        flex: 1 1 auto

    .ticket__name
        font-size: 20px
        font-weight: 700
        flex: 1 1 425px
        text-transform: capitalize
        color: white


    .ticket__price
        flex: 1 1 390px

        .ticket__price-top,
        .ticket__price-bot
            font-family: font2
            font-weight: 400

        .ticket__price-top
            //font-size: 15px
            font-size: 20px
            color: white
            //margin-bottom: 7px

        .ticket__price-bot
            font-size: 13px
            color: darkBlue
            line-height: 1.3
            margin-top 10px

    .ticket__quatnity
        margin-left: 50px
        flexbox()
        flex-center()

/* GLOBAL.STYL ======================================= */


/* overwrites ========================== */
html, body, div, table, p, input
	/* color: colorGray5 */
	font-family: font1
	font-size: 14px

body
	background-color: darkBlue

.show
	display: block !important
.hide
	display: none !important
.desktop-hide
	display: none
.desktop-show
	display: block
.hidden
	visibility: hidden
.slide
	transform: translate3d(0, 0, 0) !important
.slideLeft
	transform: translate3d(-50%, 0, 0) !important
.section
	margin: 0 auto

.title-wrap
	flexbox()
	justify-content: space-between
	align-items: center


.sectionFiller
	width: 100%
	height 280px

.container
	width: 1180px
	margin: 0 auto


.container-jumbo
	max-width: 1340px
	margin: 0 auto

.section
	width: 100%
	position: relative
	clear: both
